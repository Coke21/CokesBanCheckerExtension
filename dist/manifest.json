{
    "manifest_version": 3,
    "name": "Coke's Ban Checker Extension",
    "description": "Add elements to the Steam and BattleMetrics websites; need JWT Web Token from https://cokesbanchecker.herokuapp.com/",
    "version": "1.0.0",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://cokesbanchecker.herokuapp.com/*"
    ],
    "icons": {
        "16": "images/cbc.png",
        "32": "images/cbc.png",
        "48": "images/cbc.png",
        "128": "images/cbc.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.battlemetrics.com/*",
                "*://steamcommunity.com/*"
            ],
            "js": [
                "js/battleMetrics.js",
                "js/steamProfile.js",
                "js/helper.js"
            ],
            "run_at": "document_start"
        }
    ]
}